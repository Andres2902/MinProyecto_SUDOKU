<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="400.0" style="-fx-background-color: #142850;"
            xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.demosudoku.controller.SudokuGameController">

    <children>


        <Label text="Sudoku" layoutX="145.0" layoutY="40.0" textFill="#00A8CC">
            <font>
                <Font name="Berlin Sans FB" size="36.0" />
            </font>
        </Label>


        <GridPane fx:id="boardGridPane"
                  gridLinesVisible="true"
                  layoutX="100.0" layoutY="100.0"
                  prefHeight="200.0" prefWidth="200.0"
                  AnchorPane.leftAnchor="100.0"
                  AnchorPane.rightAnchor="100.0"
                  AnchorPane.topAnchor="100.0"
                  AnchorPane.bottomAnchor="100.0">

            <columnConstraints>
                <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" prefWidth="50.0" />
                <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" prefWidth="50.0" />
                <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" prefWidth="50.0" />
                <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" prefWidth="50.0" />
                <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" prefWidth="50.0" />
                <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" prefWidth="50.0" />
            </columnConstraints>

            <rowConstraints>
                <RowConstraints valignment="CENTER" vgrow="SOMETIMES" prefHeight="30.0" />
                <RowConstraints valignment="CENTER" vgrow="SOMETIMES" prefHeight="30.0" />
                <RowConstraints valignment="CENTER" vgrow="SOMETIMES" prefHeight="30.0" />
                <RowConstraints valignment="CENTER" vgrow="SOMETIMES" prefHeight="30.0" />
                <RowConstraints valignment="CENTER" vgrow="SOMETIMES" prefHeight="30.0" />
                <RowConstraints valignment="CENTER" vgrow="SOMETIMES" prefHeight="30.0" />
            </rowConstraints>
        </GridPane>


        <!-- Contenedor para los botones -->
        <AnchorPane layoutY="320.0" prefHeight="60.0" prefWidth="400.0">

            <Button text="Ayuda"
                    layoutX="90.0"
                    layoutY="15.0"
                    prefWidth="100.0"
                    prefHeight="30.0"
                    onAction="#handleHelp"
                    style="-fx-background-color: #00A8CC; -fx-text-fill: #142850; -fx-font-family: 'Berlin Sans FB'; -fx-font-size: 14px;" />

            <Button text="Reiniciar"
                    layoutX="210.0"
                    layoutY="15.0"
                    prefWidth="100.0"
                    prefHeight="30.0"
                    onAction="#handleRestart"
                    style="-fx-background-color: #00A8CC; -fx-text-fill: #142850; -fx-font-family: 'Berlin Sans FB'; -fx-font-size: 14px;" />

        </AnchorPane>






    </children>
</AnchorPane>
